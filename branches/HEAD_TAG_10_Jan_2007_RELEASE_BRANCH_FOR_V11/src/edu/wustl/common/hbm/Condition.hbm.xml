<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.common.querysuite.queryobject.impl.Condition"
        table="QUERY_CONDITION"
        dynamic-update="false"
        dynamic-insert="false"
    >
        <cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CONDITION_SEQ</param>
            </generator>
        </id>

        <property
            name="attributeId"
            type="long"
            update="true"
            insert="true"
            column="ATTRIBUTE_ID"
            length="30"
            not-null="true"
        />

        <property
            name="relationalOperatorString"
            type="string"
            update="true"
            insert="true"
            column="RELATIONAL_OPERATOR"
        />

        <list
            name="values"
            table="QUERY_CONDITION_VALUES"
            lazy="false"
            inverse="false"
            cascade="all-delete-orphan"
        >
            <cache 
                usage="read-write" 
             />

              <key
                  column="QUERY_CONDITION_ID"
              />

              <index
                  column="POSITION"
                  type="int"
              />

              <element
                  column="VALUE_LIST"
                  type="string"
                  not-null="false"
                  unique="false"
              />

        </list>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-Condition.xml
            containing the additional properties and place it in your merge dir.
        -->

        <joined-subclass
            name="edu.wustl.common.querysuite.queryobject.impl.ParameterizedCondition"
            table="QUERY_PARAMETERIZED_CONDITION"
            dynamic-update="false"
            dynamic-insert="false"
        >
        <key
            column="IDENTIFIER"
        />
        <property
            name="index"
            type="integer"
            update="true"
            insert="true"
            column="CONDITION_INDEX"
        />

        <property
            name="name"
            type="string"
            update="true"
            insert="true"
            column="CONDITION_NAME"
            length="255"
        />

        </joined-subclass>

    </class>

</hibernate-mapping>
